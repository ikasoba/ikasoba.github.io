---
layout: null
---
[
  {% for post in site.posts %}
    {
      "id":"{{post.id | xml_escape}}",
      "url":"{{post.url | xml_escape }}",
      "title":"{{post.title | xml_escape}}",
      "categories":[
        {% assign i = 0 %}
        {% for name in post.categories %}
          "{{name}}"{% if i <post.categories.size-1 %},{% endif %}
        {% endfor %}
      ]
    }
  {% endfor %}
]